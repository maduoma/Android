<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productsItemMetadataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="48dp"
        app:cardBackgroundColor="@color/dark_grey"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingStart="80dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/productsItemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Moonlight" />

            <TextView
                android:id="@+id/productsItemBrandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whitish"
                android:textSize="14sp"
                tools:text="by Brand" />

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/productsItemSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/whitish"
                android:textSize="14sp"
                tools:text="Size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/productsItemImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_no_image"
        tools:ignore="ContentDescription" />

</RelativeLayout>