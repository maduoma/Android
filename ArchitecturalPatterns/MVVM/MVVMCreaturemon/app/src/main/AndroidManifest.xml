<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dodemy.mvvm_creaturemon">

    <application
        android:name=".app.CreaturemonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVMCreaturemon">
        <activity android:name=".view.allcreatures.AllCreaturesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.creature.CreatureActivity"
            android:label="@string/add_creature"
            android:parentActivityName=".view.allcreatures.AllCreaturesActivity" />
    </application>

</manifest>